# Local Development Environment Variables
# Copy this file to .env.local and update values

# Django API URL - Development
NEXT_PUBLIC_API_URL=http://caddy

# Node Environment
NODE_ENV=development

# Other public variables (accessible in browser)
# NEXT_PUBLIC_SITE_URL=http://localhost:3000
# NEXT_PUBLIC_GA_ID=

# Private variables (only accessible in server components)
# API_SECRET_KEY=

# ============================================================================
# SOCIAL AUTHENTICATION (OAuth Providers)
# ============================================================================

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple OAuth
NEXT_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id
APPLE_SECRET=your-apple-private-key
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id
